{
  "manifest_version": 3,
  "name": "spark-quotes-daily",
  "version": "1.0.0",
  "description": "Every new tab shows a daily inspirational quote over a stunning 4K background.",
  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://raw.githubusercontent.com/<YOUR_GITHUB_USERNAME>/<YOUR_REPO_NAME>/main/quotes.json",
    "https://source.unsplash.com/*"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  }
}
